# focus window
alt - n : yabai -m window --focus west
alt - e : yabai -m window --focus south
alt - i : yabai -m window --focus north
alt - o : yabai -m window --focus east

# focus space
alt + ctrl - n : yabai -m space --focus prev
alt + ctrl - o : yabai -m space --focus next

# move managed window
alt + shift - n : yabai -m window --warp west
alt + shift - e : yabai -m window --warp south
alt + shift - i : yabai -m window --warp north
alt + shift - o : yabai -m window --warp east

# move focused window into new space
alt + shift + ctrl - n : yabai -m window --space prev;\
                         yabai -m space --focus prev
alt + shift + ctrl - o : yabai -m window --space next;\
                         yabai -m space --focus next

# delete focused space and focus first space on display
alt + ctrl - x : yabai -m space --destroy

# Create space on the active dispa
alt + ctrl - w : yabai -m space --create

# rotate tree
alt - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
alt - z : yabai -m window --toggle zoom-fullscreen

# toggle padding and gap
alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# float / unfloat window and center on screen
alt - f : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle window split type
alt - y : yabai -m window --toggle split

# toggle mission control
alt - m : yabai -m space --toggle mission-control

# balance size of windows
alt - 0 : yabai -m space --balance

# resize windows
alt + shift + ctrl + cmd - n : yabai -m window --resize left:-100:0 ; yabai -m window --resize right:-100:0
alt + shift + ctrl + cmd - e : yabai -m window --resize bottom:0:100 ; yabai -m window --resize top:0:100
alt + shift + ctrl + cmd - i : yabai -m window --resize top:0:-100 ; yabai -m window --resize bottom:0:-100
alt + shift + ctrl + cmd - o : yabai -m window --resize right:100:0 ; yabai -m window --resize left:100:0

shift + alt + ctrl - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt + ctrl - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt + ctrl - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt + ctrl - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt + ctrl - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt + ctrl - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt + ctrl - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt + ctrl - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + alt + ctrl - 9 : yabai -m window --space 9; yabai -m space --focus 9

alt + ctrl - 1 : yabai -m space --focus 1
alt + ctrl - 2 : yabai -m space --focus 2
alt + ctrl - 3 : yabai -m space --focus 3
alt + ctrl - 4 : yabai -m space --focus 4
alt + ctrl - 5 : yabai -m space --focus 5
alt + ctrl - 6 : yabai -m space --focus 6
alt + ctrl - 7 : yabai -m space --focus 7
alt + ctrl - 8 : yabai -m space --focus 8
alt + ctrl - 9 : yabai -m space --focus 9
