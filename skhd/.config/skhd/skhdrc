# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# focus space
alt + ctrl - h : yabai -m space --focus prev
alt + ctrl - l : yabai -m space --focus next

# move managed window
alt + shift - h : yabai -m window --warp west
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north
alt + shift - l : yabai -m window --warp east

# move focused window into new space
alt + shift + ctrl - h : yabai -m window --space prev;\
                         yabai -m space --focus prev
alt + shift + ctrl - l : yabai -m window --space next;\
                         yabai -m space --focus next

# delete focused space and focus first space on display
alt + ctrl - x : yabai -m space --destroy

# Create space on the active display
alt + ctrl - n : yabai -m space --create

# rotate tree
alt - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
alt - z : yabai -m window --toggle zoom-fullscreen

# toggle padding and gap
alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# float / unfloat window and center on screen
alt - f : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle window split type
alt - e : yabai -m window --toggle split

# toggle mission control
alt - m : yabai -m space --toggle mission-control

# balance size of windows
alt - 0 : yabai -m space --balance

# resize windows
alt + shift + ctrl + cmd - h : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
alt + shift + ctrl + cmd - j : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20
alt + shift + ctrl + cmd - k : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
alt + shift + ctrl + cmd - l : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0
